@using Blog
@{
    Layout = "_LayoutHome.cshtml";
    Author author = Model.Author;
    Article article = Model.Article;
}

<div class="row">
    <div class="panel">
        <div class="panel-body">
            <h2><strong>@article.Title</strong></h2>
            <div>
                <span class="pull-right">最后更新 - @article.LastUpdateTime</span>
                <h4><span class="label label-default">@article.Category</span></h4>
            </div>
            <div class="well">
                @Html.Raw(Model.Content)
            </div>
        </div>
    </div>
</div>