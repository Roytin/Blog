@using System
@using Blog
@{
    Layout = "_LayoutHome.cshtml";
}

@section blogHeader{
    <div class="jumbotron">
        <h1>@Model.Title</h1>
        <p class="lead">@Model.Description</p>
    </div>
}
<div class="row">
    @foreach (Article article in @Model.Articles)
    {
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="panel-title">
                    <a href="/detail/@article.Link">
                       @article.Title
                    </a>
                </div>
            </div>
            <div class="panel-body">
                <small class="pull-left"><span class="glyphicon glyphicon-calendar" aria-hidden="true"></span>@article.CreateTime</small>
                <br />
                <div class="text-justify">@Html.Raw(article.Description)</div>
                <h5>
                    <span class="label label-default">
                        @article.Category
                    </span>
                </h5>
            </div>
        </div>
    }
</div>
