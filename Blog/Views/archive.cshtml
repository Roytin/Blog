@using Blog
@{
    Layout = "_LayoutHome.cshtml";
}

<div class="row">
    @foreach (Article article in @Model.Articles)
    {
        <div class="col-sm-4">
            <div class="panel panel-default">
                <div class="panel-body">
                    <a class="text-muted" href="/detail/@article.Link"><h3>@article.Title</h3></a>
                    <div>
                        <small class="pull-right">发布于 - @article.CreateTime</small>
                        <h5>
                            <span class="label label-default">
                                @article.Category
                            </span>
                        </h5>
                    </div>
                    <div class="text-justify">@Html.Raw(article.Description)</div>
                </div>
            </div>
        </div>
    }
</div>