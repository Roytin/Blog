@using Blog
@{
    Layout = "_LayoutAdmin.cshtml";
    Article article = new Article();
    if (Model.Action != "add")
    {
        article = Model.Article;
    }
}

<link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css" rel="stylesheet">

<!-- include summernote css/js-->
<link href="/css/summernote.css" rel="stylesheet" />
<script src="/js/summernote.js"></script>

<div class="row">
    <form method="POST" class="form-horizontal">
        <input name="Id" type="hidden" value="@article.Id" />
        <div class="form-group">
            <label for="Title" class="col-sm-1 control-label">标题</label>
            <div class="col-sm-11">
                <input id="Title" name="Title" class="form-control" type="text" value="@article.Title" placeholder="标题" />
            </div>
        </div>

        <div class="form-group">
            <label for="Link" class="col-sm-1 control-label">链接</label>
            <div class="col-sm-11">
                <input id="Link" name="Link" class="form-control" type="text" value="@article.Link" placeholder="链接" />
            </div>
        </div>

        <div class="form-group">
            <label for="Description" class="col-sm-1 control-label">描述</label>
            <div class="col-sm-11">
                <input id="Description" name="Description" class="form-control" type="text" value="@article.Description" placeholder="描述" />
            </div>
        </div>

        <div class="form-group">
            <label for="Category" class="col-sm-1 control-label">分类</label>
            <div class="col-sm-11">
                <input id="Category" name="Category" class="form-control" type="text" value="@article.Category" placeholder="分类" />
            </div>
        </div>

        <div class="form-group">
            <label for="Tags" class="col-sm-1 control-label">标签</label>
            <div class="col-sm-11">
                <input id="Tags" name="Tags" class="form-control" type="text" value="@article.Tags" placeholder="标签" />
            </div>
        </div>

        <div class="form-group">
            <label for="Content" class="col-sm-1 control-label">内容</label>
            <div class="col-sm-11">
                <textarea id="Content" name="Content" class="form-control" placeholder="内容" rows="60">@article.Content</textarea>
            </div>
        </div>
        
        <div class="form-group">
            <input type="submit" class="btn btn-lg btn-primary" style="float: right;margin: 12px" value="提交" />
        </div>
        
    </form>
</div>
<script>
    $(document).ready(function() {
        $('#Content').summernote({
            height: 500,
            minHeight: 300,
            maxHeight: 600,
        });
    });
</script>

